{
  "hosting": {
    "site": "fakturace",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "cache-control: public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "static/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "cache-control: public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
